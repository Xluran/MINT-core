<mapping name="Sync Mouse press to AICommand deactivate" xmlns="http://www.multi-access.de"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://www.multi-access.de mint-mappings.xsd">

  <operator type="sequential" id="1">
    <observations>
      <observation id="2" interactor="Interactor.IR.IRMode.Pointer.Mouse" states="left_pressed" process="onchange"/>
      <observation id="3" interactor="Interactor.AIO.AIIN.AIINDiscrete.AICommand" states="focused" result="c" process="instant"/>
      <observation id="4" interactor="Interactor.AIO.AIIN.AIINDiscrete.AICommand" name="c.name" states="activated" process="instant"/>
    </observations>
    <actions>
      <event id="5" type="deactivate" target="c"/>
    </actions>
  </operator>

</mapping>

