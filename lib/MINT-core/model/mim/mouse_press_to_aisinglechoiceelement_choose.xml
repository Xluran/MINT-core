<mapping name="Sync Mouse press to AISingleChoiceElement choose" xmlns="http://www.multi-access.de"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://www.multi-access.de mint-mappings.xsd">

  <operator type="sequential" id="1">
    <observations>
      <observation id="2" interactor="Interactor.Pointer.Mouse" name="mouse" states="left_pressed" result="m" process="onchange"/>
      <observation id="3" interactor="Interactor.AIO.AIIN.AIINDiscrete.AIChoiceElement.AISingleChoiceElement" states="focused" result="sce" process="instant"/>
      <observation id="4" interactor="Interactor.AIO.AIIN.AIINDiscrete.AIChoiceElement.AISingleChoiceElement" name="sce.name" result="ttt" states="unchosen" process="instant"/>
    </observations>
    <actions>
      <event id="5" type="choose" target="sce"/>
    </actions>
  </operator>

</mapping>

