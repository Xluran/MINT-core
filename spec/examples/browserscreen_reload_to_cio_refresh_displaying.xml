<mapping name="BrowserScreen reload to CIO refresh all displaying" xmlns="http://www.multi-access.de" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://www.multi-access.de mint-mappings.xsd">
  <operator type="sequential" id="1">
    <observations>
      <observation id="2" interactor="Interactor.IR.IRMedia.Screen.BrowserScreen" states="reloaded"  process="onchange"/>
      <observation id="3" interactor="Interactor.CIO" states="displaying" result="displaying_cios" process="instant"/>
    </observations>
    <actions>
      <event id="7" type="refresh" target="displaying_cios"/>
    </actions>
  </operator>
</mapping>

