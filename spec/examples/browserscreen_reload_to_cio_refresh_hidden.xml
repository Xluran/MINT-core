<mapping name="BrowserScreen reload to CIO refresh all hidden" xmlns="http://www.multi-access.de" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://www.multi-access.de mint-mappings.xsd">
  <operator type="sequential" id="1">
    <observations>
      <observation id="2" interactor="Interactor.IR.IRMedia.Screen.BrowserScreen" states="reloaded"  process="onchange"/>
      <observation id="5" interactor="Interactor.CIO" states="hidden" result="hidden_cios" process="instant"/>
    </observations>
    <actions>
      <event id="6" type="refresh" target="hidden_cios"/>
      </actions>
  </operator>
</mapping>

